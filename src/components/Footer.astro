---
import Code from '../components/icons/Code.astro';
import Linkedin from '../components/icons/Linkedin.astro';
import ButtonAnimatedGradient from './ButtonAnimatedGradient';
import Github from './icons/Github.astro';
---

<footer class="bg-white dark:bg-gray-900" id="resume">
    <div class="mx-auto w-full max-w-screen-lg p-4 py-6 lg:py-8">
        <div class="md:flex md:justify-between">
          <div class="mb-6 md:mb-0">
              <a href="https://flowbite.com/" class="flex items-center space-x-3">
                <Code class="size-10"/>
                  <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">The Fullstack</span>
              </a>
          </div>
          <div class="flex items-center gap-3 py-10">
            <h2 class="text-xl md:mx-3 text-end max-w-md">Check out my resume to discover how I can add value to your project!</h2>
            <ButtonAnimatedGradient href="/R_Alvaro_ENG_06-2024.pdf" text="Download" iconId='download' pdf='R_Alvaro_ENG_06-2024.pdf' client:visible/>
          </div>
      </div>
      <hr class="my-6 border-gray-200 sm:mx-auto dark:border-gray-700 lg:my-8" />
      <div class="sm:flex sm:items-center sm:justify-between">
          <span class="text-sm text-gray-500 sm:text-center dark:text-gray-400">© 2024 <a href="#">The Fullstack™</a>. Made with ❤️ by myself.
          </span>
          <div class="flex mt-4 sm:justify-center sm:mt-0">

              <a href="https://github.com/Bzzmn" target="_blank" class="text-gray-500 hover:text-gray-900 dark:hover:text-white ms-5">
                <Github />
                  <span class="sr-only">GitHub account</span>
              </a>
              <a href="https://www.linkedin.com/in/alvaro-acevedo-ing/" target="_blank" class="text-gray-500 hover:text-gray-900 dark:hover:text-white ms-5">
                <Linkedin />
                  <span class="sr-only">LinkedIn</span>
              </a>
          </div>
      </div>
    </div>
</footer>
